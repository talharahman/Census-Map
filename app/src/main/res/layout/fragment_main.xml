<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".MainActivity">

    <com.google.android.gms.maps.MapView
        android:id="@+id/main_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_map"
        android:layout_marginStart="@dimen/dimen_reg"
        android:layout_marginEnd="@dimen/dimen_reg"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508"
        tools:context=".MapsActivity" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_reg"
        android:layout_marginEnd="@dimen/dimen_reg"
        android:padding="10dp"
        app:cardCornerRadius="@dimen/dimen_reg"
        app:cardElevation="@dimen/dimen_reg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_map">

        <Button
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_button"
            android:background="#2196F3"
            android:gravity="center"
            android:text="@string/info_button"
            android:textSize="30sp" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>