<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <android.support.v7.widget.CardView
         android:id="@+id/population_cardview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dimen_reg"
         android:layout_marginEnd="@dimen/dimen_reg"
         app:cardCornerRadius="@dimen/dimen_reg"
         app:cardElevation="@dimen/dimen_reg"
         android:padding="10dp"
         android:layout_margin="@dimen/dimen_reg">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:layout_marginTop="0dp"
             android:gravity="center"
             android:text="Total Population"
             android:background="#2196F3"/>

         <TextView
             android:id="@+id/population_total"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:gravity="center"
             android:layout_marginTop="40dp"
             android:text="51.7K (2010)"
             android:background="#2196F3"/>
     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:id="@+id/foreign_born_cardview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dimen_reg"
         android:layout_marginEnd="@dimen/dimen_reg"
         app:cardCornerRadius="@dimen/dimen_reg"
         app:cardElevation="@dimen/dimen_reg"
         android:padding="10dp"
         android:layout_margin="@dimen/dimen_reg"
         >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:layout_marginTop="0dp"
             android:gravity="center"
             android:text="Foreign Born Population"
             android:background="#E91E63"/>

         <TextView
             android:id="@+id/foreign_born"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:gravity="center"
             android:layout_marginTop="40dp"
             android:text="28.4% (NYC 38%)"
             android:background="#E91E63"/>
     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:id="@+id/age_under18_cardview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dimen_reg"
         android:layout_marginEnd="@dimen/dimen_reg"
         app:cardCornerRadius="@dimen/dimen_reg"
         app:cardElevation="@dimen/dimen_reg"
         android:padding="10dp"
         android:layout_margin="@dimen/dimen_reg"
         >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:layout_marginTop="0dp"
             android:gravity="center"
             android:text="Age Under 18"
             android:background="#4CAF50"/>

         <TextView
             android:id="@+id/age_under_18"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:gravity="center"
             android:layout_marginTop="40dp"
             android:text="8.4% (NYC 21.2%)"
             android:background="#4CAF50"/>
     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:id="@+id/age_over65_cardview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dimen_reg"
         android:layout_marginEnd="@dimen/dimen_reg"
         app:cardCornerRadius="@dimen/dimen_reg"
         app:cardElevation="@dimen/dimen_reg"
         android:padding="10dp"
         android:layout_margin="@dimen/dimen_reg"
         >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:layout_marginTop="0dp"
             android:gravity="center"
             android:text="Age Over 65"
             android:background="#FFEB3B"/>

         <TextView
             android:id="@+id/age_over_65"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="30sp"
             android:gravity="center"
             android:layout_marginTop="40dp"
             android:text="12.1% (NYC 13%)"
             android:background="#FFEB3B"/>
     </android.support.v7.widget.CardView>

    </LinearLayout>